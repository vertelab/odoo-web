<?xml version="1.0"?>
<odoo>

    <record id="update_dashboard_config" model="ir.ui.view">
        <field name="name">update.dashboard.config</field>
        <field name="model">update.dashboard.config</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="welcome_msg"/>
                    <field name="welcome_dsc"/>
                    <field name="group_ids" widget="many2many_tags"
                           options="{'no_create':True,'no_edit':True,'no_create_edit':True}"/>
                </group>
                <footer>
                     <button string="Update" type="object" class="oe_highlight" name="upate_data"/>
                     <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_update_af_dashboard_config" model="ir.actions.act_window">
        <field name="name">Update Welcome Data</field>
        <field name="res_model">update.dashboard.config</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="update_af_dashboard_welcome_data_menu" action="action_update_af_dashboard_config"
              name="Update Welcome Data" sequence="5" parent="af_dashboard_main_menu_config"
                groups="group_my_dashboard_manager"/>
</odoo>

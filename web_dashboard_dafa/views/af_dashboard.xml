<?xml version="1.0"?>
<odoo>

    <record id="af_dashboard_view" model="ir.ui.view">
        <field name="name">af.dashboard.kanban</field>
        <field name="model">af.dashboard</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" create="false" import="false">
                <field name="name"/>
                <field name="user_id"/>
                <field name="firstname"/>
                <field name="welcome_msg"/>
                <field name="welcome_dsc"/>
                <field name="box_ids"/>
                <templates>
                    <t t-name="kanban-box">
                        <div style="width:100%;height:500px;border:none;background-color:#80808003"
                             class="dashboard_dafa">
                            <h2>
                                <t t-esc="record.welcome_msg.value"/>
                                <t t-if="record.firstname.raw_value">
                                    <t t-esc="record.firstname.raw_value"/>
                                </t>
                                <t t-else="">
                                    <t t-esc="record.user_id.value"/>
                                </t>
                            </h2>
                            <br/>
                            <p>
                                <t t-if="record.welcome_dsc.raw_value">
                                    <t t-raw="record.welcome_dsc.raw_value"/>
                                </t>
                            </p>
                            <br/>
                            <table width="100%" style="border-collapse: separate;border-spacing: 15px;">
                                <tr>
                                    <t t-foreach="record.box_ids.raw_value" t-as="box">
                                        <t t-if="box.is_detail">
                                            <td width="15%"
                                                style="padding-left:5px;background-color:#80808003;vertical-align: top">
                                                <t t-raw="box.name"/>
                                                <t t-raw="box.sub_title"/>
                                                <t t-raw="box.description"/>
                                                <a t-att-href="box.action_url">
                                                    <i style="font-size:100px;padding-left:1%"
                                                       t-att-class="box.image_class_name"/>
                                                </a>
                                            </td>
                                        </t>
                                    </t>
                                </tr>
                            </table>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_af_dashboard" model="ir.actions.act_window">
        <field name="name">My Dashboard</field>
        <field name="res_model">af.dashboard</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban</field>
        <field name="domain">[('user_id', '=', context.get('uid'))]</field>
    </record>

    <menuitem id="af_dashboard_menu" action="action_af_dashboard" name="My Dashboard" sequence="0"/>

    <record id="res_groups_dash_tree_view" model="ir.ui.view">
        <field name="name">res.groups.dashboard.tree</field>
        <field name="model">res.groups</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="display_name"/>
            </tree>
        </field>
    </record>

    <record id="res_groups_dash_form_view" model="ir.ui.view">
        <field name="name">res.groups.dashboard.form</field>
        <field name="model">res.groups</field>
        <field name="arch" type="xml">
            <form create="false">
                <group>
                    <field name="display_name" readonly="1"/>
                    <field name="welcome_dsc"/>
                </group>
                <notebook>
                    <page string="Boxes" name="boxes">
                        <field name="box_ids">
                            <tree>
                                <field name="name"/>
                                <field name="sub_title"/>
                                <field name="description"/>
                                <field name="image"/>
                                <field name="action_id"/>
                            </tree>
                            <form>
                                <group>
                                    <field name="name"/>
                                    <field name="sub_title"/>
                                    <field name="description"/>
                                    <field name="image"/>
                                    <field name="action_id"/>
                                </group>
                            </form>
                        </field>
                    </page>
                    <page string="Users" name="users">
                        <field name="users" readonly="1"/>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="action_res_groups_dashboard" model="ir.actions.act_window">
        <field name="name">Groups</field>
        <field name="res_model">res.groups</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_res_groups_dashboard_tree" model="ir.actions.act_window.view">
        <field name="act_window_id" ref="action_res_groups_dashboard"/>
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="res_groups_dash_tree_view"/>
    </record>


    <record id="action_res_groups_dashboard_form" model="ir.actions.act_window.view">
        <field name="act_window_id" ref="action_res_groups_dashboard"/>
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="res_groups_dash_form_view"/>
    </record>

    <record id="res_groups_tree_view" model="ir.ui.view">
        <field name="name">res.groups.tree</field>
        <field name="model">res.groups</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_res_groups_tree" model="ir.actions.act_window.view">
        <field name="act_window_id" ref="base.action_res_groups"/>
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="res_groups_tree_view"/>
    </record>


    <record id="action_res_groups_form" model="ir.actions.act_window.view">
        <field name="act_window_id" ref="base.action_res_groups"/>
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="base.view_groups_form"/>
    </record>


    <menuitem id="af_dashboard_main_menu_config" parent="af_dashboard_menu"
              name="Dashboard Configurations" sequence="100"
              groups="web_dashboard_dafa.group_my_dashboard_manager"/>

    <menuitem id="res_groups_dashboard_menu" action="action_res_groups_dashboard"
              name="Groups" sequence="1" parent="af_dashboard_main_menu_config"/>


    <record id="af_dashboard_view_tree" model="ir.ui.view">
        <field name="name">af.dashboard.tree</field>
        <field name="model">af.dashboard</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="user_id"/>
                <field name="group_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="af_dashboard_view_form" model="ir.ui.view">
        <field name="name">af.dashboard.form</field>
        <field name="model">af.dashboard</field>
        <field name="arch" type="xml">
            <form create="false">
                <group>
                    <group>
                        <field name="name" readonly="1"/>
                    </group>
                    <group>
                        <field name="user_id" readonly="1"/>
                    </group>
                </group>
                <group>
                    <field name="welcome_msg"/>
                </group>
                <group>
                    <field name="welcome_dsc"/>
                </group>
                <notebook>
                    <page string="Boxes" name="box_ids">
                        <group>
                            <field name="box_ids" nolabel="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="sub_title"/>
                                    <field name="description"/>
                                    <field name="action_id"/>
                                    <field name="image"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="name"/>
                                        <field name="sub_title"/>
                                        <field name="description"/>
                                        <field name="action_id"/>
                                        <field name="image"/>
                                    </group>
                                </form>
                            </field>
                        </group>
                    </page>
                    <page string="Groups" name="group_ids">
                        <group>
                            <field name="group_ids">
                                <tree>
                                    <field name="display_name"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="action_af_dashboard_config" model="ir.actions.act_window">
        <field name="name">All User's Dashboard Configuration</field>
        <field name="res_model">af.dashboard</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'from_manual':1}</field>
    </record>


    <menuitem id="af_dashboard_menu_config" action="action_af_dashboard_config"
              name="All Users Dashboard Configuration" sequence="2"
              parent="af_dashboard_main_menu_config"
              groups="-web_dashboard_dafa.group_my_dashboard_manager,base.group_system"/>

    <record id="my_af_dashboard_view_tree" model="ir.ui.view">
        <field name="name">my.af.dashboard.tree</field>
        <field name="model">af.dashboard</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="user_id"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="my_af_dashboard_view_form" model="ir.ui.view">
        <field name="name">my.af.dashboard.form</field>
        <field name="model">af.dashboard</field>
        <field name="arch" type="xml">
            <form create="false">
                <group>
                    <group>
                        <field name="name" readonly="1"/>
                    </group>
                    <group>
                        <field name="user_id" readonly="1"/>
                    </group>
                </group>
                <group>
                    <field name="welcome_msg"/>
                </group>
                <group>
                    <field name="welcome_dsc"/>
                </group>
                <group>
                    <field name="box_ids" nolabel="1">
                        <tree>
                            <field name="name"/>
                            <field name="sub_title"/>
                            <field name="description"/>
                            <field name="action_id"/>
                            <field name="image"/>
                        </tree>
                        <form>
                            <group>
                                <field name="name"/>
                                <field name="sub_title"/>
                                <field name="description"/>
                                <field name="action_id"/>
                                <field name="image"/>
                            </group>
                        </form>
                    </field>
                </group>
            </form>
        </field>
    </record>

    <record id="action_my_af_dashboard_boxes_config" model="ir.actions.act_window">
        <field name="name">My Dashboard Configuration</field>
        <field name="res_model">af.dashboard</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('user_id', '=', uid)]</field>
    </record>

    <menuitem id="af_dashboard_boxes_menu_config" action="action_my_af_dashboard_boxes_config"
              name="My Dashboard Configuration" sequence="3" parent="af_dashboard_main_menu_config"/>

    <record id="dashboard_boxes_tree_view" model="ir.ui.view">
        <field name="name">dashboard.boxes.tree</field>
        <field name="model">dashboard.boxes</field>
        <field name="arch" type="xml">
            <tree>
                <field name="user_id"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="dashboard_boxes_form_view" model="ir.ui.view">
        <field name="name">dashboard.boxes.form</field>
        <field name="model">dashboard.boxes</field>
        <field name="arch" type="xml">
            <form create="false">
                <group>
                    <field name="af_dashboard_id" readonly="1"/>
                    <field name="name"/>
                    <field name="sub_title"/>
                    <field name="description"/>
                    <field name="action_id"/>
                    <field name="image"/>
                </group>

            </form>
        </field>
    </record>

    <record id="action_dashboard_boxes_config" model="ir.actions.act_window">
        <field name="name">Dashboard Boxes</field>
        <field name="res_model">dashboard.boxes</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'from_manual':1}</field>
    </record>

    <menuitem id="dashboard_boxes_menu_config" action="action_dashboard_boxes_config"
              name="Dashboard Boxes Configuration" sequence="6" parent="af_dashboard_main_menu_config"/>

    <record id="fa_class_tree" model="ir.ui.view">
        <field name="name">fa.class.tree</field>
        <field name="model">fa.class</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="class_name"/>
            </tree>
        </field>
    </record>

    <record id="fa_class_from" model="ir.ui.view">
        <field name="name">fa.class.from</field>
        <field name="model">fa.class</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="class_name"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_fa_class_config" model="ir.actions.act_window">
        <field name="name">Image Names</field>
        <field name="res_model">fa.class</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="fa_class_menu_config" action="action_fa_class_config"
              name="Images" sequence="4" parent="af_dashboard_main_menu_config"/>


</odoo>
